<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   >
    <!--android:background="@color/black"-->

    <ImageButton
        android:id="@+id/child_toolbar_leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:background="@drawable/back"
        android:scaleX="0.4"
        android:scaleY="0.4" />

    <TextView
        android:id="@+id/child_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="shuxing"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"/>
    <!--android:visibility="gone"-->
    <ImageView
        android:id="@+id/is_child_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/often_drop"
        android:scaleX="3"
        android:scaleY="3"

        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/child_toolbar_title"
        android:layout_alignBottom="@+id/child_toolbar_title"
        android:visibility="gone"/>
    <!--android:visibility="gone"-->


    <ImageButton
        android:id="@+id/child_toolbar_rightButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:visibility="gone"

        />

</RelativeLayout>