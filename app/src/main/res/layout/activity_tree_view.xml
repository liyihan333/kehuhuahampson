<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kwsoft.kehuhua.adcustom.TreeViewActivity">

    <RelativeLayout
        android:id="@+id/tree_view_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#393F4D">

        <ImageView
            android:id="@+id/tree_back_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/tree_list_commint"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/edit_commit"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/tree_textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="树型选择"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>










    <ListView
        android:id="@+id/list_tree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/tree_view_layout"
        android:dividerHeight="2dip"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:listSelector="#bdd5e1" />


</RelativeLayout>
