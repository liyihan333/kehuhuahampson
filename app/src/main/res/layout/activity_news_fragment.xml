<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#f4f4f4">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <!--<ImageView-->
            <!--android:id="@+id/open_searchButton"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="43dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/search_munion_item_selector"-->
            <!--android:scaleType="fitXY"-->
            <!--/>-->

        <ListView
            android:id="@+id/open_lv"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:dividerHeight="8dp"
            android:divider="#f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:smoothScrollbar="true"
            ptr:ptrMode="both"
            />

    </android.support.v4.widget.SwipeRefreshLayout>



    <RelativeLayout
        android:id="@+id/open_avloadingIndicatorViewLayoutList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50323232"
        android:visibility="gone"
         >
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/open_avloadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:indicator="LineScale"
            app:indicator_color="@color/blue"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>
