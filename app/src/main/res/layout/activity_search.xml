<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#393F4D">

        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="17sp"/>


    </RelativeLayout>


<ListView
    android:id="@+id/lv_search"
    android:layout_below="@+id/title_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/middle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/tv_search_reset"
            android:layout_toStartOf="@+id/middle_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_button2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="清空"
            />

        <Button
            android:id="@+id/tv_commit_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/middle_tv"
            android:text="确定"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_button"
            />

    </RelativeLayout>






</RelativeLayout>
