<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_stu_pro_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kwsoft.version.StuProLoginActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcomepage"/>
    <RelativeLayout
        android:id="@+id/avloadingIndicatorViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00323232"
        android:layout_centerInParent="true"
        >
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avloadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:indicator="BallSpinFadeLoader"
            app:indicator_color="@color/blue"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>




</RelativeLayout>
